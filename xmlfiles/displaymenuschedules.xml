<menuschedules x="0" y="0" width="100%" height="100%" scaletvx="36%" scaletvy="0%" scaletvwidth="64%" scaletvheight="100%" fadetime="0" >

<background>

<area x="0%" y="0%" width="100%" height="10%" layer="2">
	<drawimage condition="not{current}" name="header" imagetype="skinpart" path="header" x="0" y="0" width="{areawidth}" height="{areaheight}"/>	
</area>

<area x="0" y="0" width="36%" height="100%" layer="1">
	<drawrectangle x="0" y="0" width="{areawidth}" height="{areaheight}" color="{clrBlack}" />
</area>



</background>


<header>
	<area x="1%" y="1%" width="68%" height="8%" layer="3">

		<drawimage name="logo" cache="true" condition="{channellogoexists}" imagetype="channellogo" path="{channelid}" x="0" width="15%" height="100%" align="left" valign="center" />
		<drawtext condition="{channellogoexists}" x="{width(logo)}" valign="center" font="{light}" fontsize="80%" color="{clrWhite}" text=" {title}" />
		<drawtext condition="not{channellogoexists}" x="{width(notlogo)}" valign="center" font="{light}" fontsize="80%" color="{clrWhite}" text="{title}" />
	
	</area>
</header>



<menuitems x="0" y="10%" orientation="vertical" width="100%" height="82%" numlistelements="8">
	
<listelement>
	<area x="0%" width="35%" layer="2">
		<drawimage condition="{current}" name="menuitemback" imagetype="skinpart" path="menuitemback" x="0" y="0" width="{areawidth}" height="{areaheight}"/>
	</area>
	<area x="0%" width="35%" layer="2">
		<drawimage condition="not{current}" name="menuitem" imagetype="skinpart" path="menuitem" x="0" y="0" width="{areawidth}" height="{areaheight}"/>
	</area>
			
         
			
<!-- WHATSON -->
	<!-- <fill color="{clrBlue}" /> -->
	<area condition="{whatson} ++ not{separator}" x="0" width="35%" layer="3">
	
		<drawimage name="timerfull" condition="{timerfull}++not{running}" imagetype="icon" path="timer" x="{areawidth}-{areaheight}/2.5" width="{areaheight}/3" height="{areaheight}/3" y="10%" />
      	<drawimage name="running" condition="{running}" imagetype="icon" path="running" x="{areawidth}-{areaheight}/2.5" width="{areaheight}/3" height="{areaheight}/3" y="10%" />
		<drawimage name="timerfullrun" condition="{timerfull}++{running}" imagetype="icon" path="running_rec" x="{areawidth}-{areaheight}/2.5" width="{areaheight}/3" height="{areaheight}/3" y="10%" />

	</area>

	<areascroll condition="{whatson}++ not{separator}" scrollelement="menutext" mode="carriagereturn" orientation="horizontal" delay="1000" scrollspeed="medium" x="1%" width="33%" layer="4">	
	<drawtext name="date" x="0" y="10%" font="{light}" fontsize="35%" color="{clrWhite}" text="{day} {date} {start} - {stop} " />			
	<drawtext name="menutext" x="0" y="{height(date)}" font="{light}" fontsize="35%" color="{clrWhite}" text=" {title}" />
	<drawtext name="subtitle" x="0" y="{height(menutext)}+{posy(menutext)}" font="{light}" fontsize="30%" color="{clrWhite}" text=" {shorttext}" />
    </areascroll>
		
			
<!-- WHATSONNOW -->
	<area condition="{whatsonnow} ++ not{separator}" x="0" width="35%" layer="3">
		  	<drawimage name="running" condition="{running}" imagetype="icon" path="running" x="{areawidth}-{areaheight}/2.5" width="{areaheight}/3" height="{areaheight}/3" y="10%" />
			<drawimage name="timerfullrun" condition="{timerfull}++{running}" imagetype="icon" path="running_rec" x="{areawidth}-{areaheight}/2.5" width="{areaheight}/3" height="{areaheight}/3" y="10%" />
		
	</area>
	

	<area condition="{whatsonnow} ++ not{separator}" x="1%" width="5%" layer="3">
	        <drawimage cache="true" condition="{channellogoexists}" imagetype="channellogo" path="{channelid}" align="center" valign="center" width="{areawidth}" height="{areaheight}/1.25" />
            <drawtext condition="not{channellogoexists}" align="center" valign="center" font="{light}" fontsize="50%" color="{clrWhite}" text="{channelnumber}" />
	</area>
	
	<areascroll condition="{whatsonnow}++ not{separator}" scrollelement="menutext" mode="carriagereturn" orientation="horizontal" delay="1000" scrollspeed="medium" x="7%" width="26%" layer="4">	
	<drawtext name="date" x="0" y="10%" font="{light}" fontsize="35%" color="{clrWhite}" text="{day} {date} {start} - {stop} " />			
	<drawtext name="menutext" x="0" y="{height(date)}" font="{light}" fontsize="35%" color="{clrWhite}" text=" {title}" />
	<drawtext name="subtitle" x="0" y="{height(menutext)}+{posy(menutext)}" font="{light}" fontsize="30%" color="{clrWhite}" text=" {shorttext}" />
    </areascroll>
		
			
			
<!-- WHATSONNEXT  -->
		<area condition="{whatsonnext} ++ not{separator}" x="0" width="35%" layer="3">
		  <drawimage name="timerfullrun" condition="{timerfull}++{running}" imagetype="icon" path="running_rec" x="{areawidth}-{areaheight}/2.5" width="{areaheight}/3" height="{areaheight}/3" y="10%" />	
	</area>
	

	<area condition="{whatsonnext} ++ not{separator}" x="1%" width="5%" layer="3">
	        <drawimage cache="true" condition="{channellogoexists}" imagetype="channellogo" path="{channelid}" align="center" valign="center" width="{areawidth}" height="{areaheight}/1.25" />
            <drawtext condition="not{channellogoexists}" align="center" valign="center" font="{light}" fontsize="50%" color="{clrWhite}" text="{channelnumber}" />
	</area>

	<areascroll condition="{whatsonnext}++ not{separator}" scrollelement="menutext" mode="carriagereturn" orientation="horizontal" delay="1000" scrollspeed="medium" x="7%" width="26%" layer="4">	
	<drawtext name="date" x="0" y="10%" font="{light}" fontsize="35%" color="{clrWhite}" text="{day} {date} {start} - {stop} " />			
	<drawtext name="menutext" x="0" y="{height(date)}" font="{light}" fontsize="35%" color="{clrWhite}" text=" {title}" />
	<drawtext name="subtitle" x="0" y="{height(menutext)}+{posy(menutext)}" font="{light}" fontsize="30%" color="{clrWhite}" text=" {shorttext}" />
    </areascroll>
		
	
<!-- separator -->
<area condition="{separator}++{whatson}" x="0" width="35%" layer="4">
      <drawtext x="0" y="0" valign="center" font="{light}" fontsize="55%" color="{clrOwnBlue}" text="{title}" />
 </area>	
 <area condition="{separator}++not{whatson}" x="0" width="35%" layer="4">
      <drawtext x="0" y="0" valign="center" font="{light}" fontsize="55%" color="{clrOwnBlue}" text=" {title}" />
 </area>	
</listelement>
    	
<currentelement delay="2000" fadetime="750">

<area x="35%" y="9%" width="65%" height="83%" layer="1">
	<drawrectangle x="0" y="0" width="{areawidth}" height="{areaheight}" color="{clrTransBlack}" />
</area>

<!-- text infobar -->
	<area x="37%" y="0%" width="62%" height="83%" layer="3">
        <drawtext name="title" x="0" y="0" font="{semibold}" width="{areawidth}" fontsize="10%" color="{clrWhite}" text="{title}" />
		<drawtext name="shorttext" x="0" y="{height(title)}" font="{semibold}" width="{areawidth}" fontsize="8%" color="{clrWhite}" text="{shorttext}" />
		
        <drawtext condition="{running}" name="start" x="0" y="{posy(shorttext)}+{height(title)}+{height(title)}/8" font="{light}" fontsize="7%" color="{clrWhite}" text="{start}" />
        <drawrectangle condition="{running}" name="sb2" x="{width(start)}+{width(start)}/8" y="{posy(start)}+{height(start)}/2" width="{areawidth}/2" height="1" color="{clrOwnBlue}" />
        <drawrectangle condition="{running}" name="sb2" x="{width(start)}+{width(start)}/8" y="{posy(start)}+{height(start)}/2-2" width="{areawidth}/2 * {elapsed} / {duration} - 20 * {elapsed} / {duration}" height="5" color="{clrOwnBlue}" />
        <drawtext condition="{running}" name="stop" x="{width(sb2)}+{width(start)}+{width(start)}/4"  y="{posy(shorttext)}+{height(title)}+{height(title)}/8" font="{light}" fontsize="7%" color="{clrWhite}" text="{stop}" />
        <drawtext condition="not{running}" x="0" y="{posy(shorttext)}+{height(title)}+{height(title)}/8" font="{light}" fontsize="8%" color="{clrWhite}" text="{start} - {stop} ({duration} min)" />
		
	</area>


	<areascroll condition="{hasposter}" mode="forthandback" orientation="vertical" delay="1000" scrollspeed="medium" x="37%" y="25%" width="61%" height="75%" layer="3">
		<drawimage  condition="{hasposter}" name="poster" imagetype="image" path="{posterpath}" align="right" y="0"  width="{areaheight} * 0.8  * {posterwidth} / {posterheight}" height="{areaheight} * 0.8"/>	
		<drawtextbox x="0" y="0" width="95%" height="{areaheight} - {posy(poster)}" float="topright" floatwidth="{width(poster)}" floatheight="{height(poster)}+50"  font="{light}" fontsize="5%" color="{clrWhite}" text="{description}" />
	</areascroll>
	<areascroll condition="not{hasposter}" mode="forthandback" orientation="vertical" delay="1000" scrollspeed="medium" x="37%" y="25%" width="61%" height="75%" layer="3">
		<drawtextbox x="0" y="0" width="95%" height="{areaheight} - {posy(poster)}" float="topleft"  font="{light}" fontsize="5%" color="{clrWhite}" text="{description}" />
	</areascroll>			
		
</currentelement>
</menuitems>	

<scrollbar>
<area x="35%" y="10%" width="1%" height="82%" layer="5">		
		<drawimage  name="scrollbar" imagetype="skinpart" path="scrollbar" x="0" y="0" width="{areawidth}" height="{areaheight}"/>	
		<drawrectangle x="3" y="0 + {areaheight} * {offset} / 1000" width="{areawidth}-6" height="{areaheight} * {height} / 1000" color="{clrOwnBlue}" />			
</area>
</scrollbar>

</menuschedules>